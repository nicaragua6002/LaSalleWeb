@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Tutores", "Index", "Tutors")</li>
            <li>@Html.ActionLink("Alumnos", "Index", "Alumnoes")</li>
            <li>@Html.ActionLink("Docentes", "Index", "Docentes")</li>
            <li>@Html.ActionLink("Asignaturas", "Index", "Asignaturas")</li>
            <li>@Html.ActionLink("Notas", "Index", "Notas")</li>
        </ul>

    }
    if (User.IsInRole("Tutor"))
    {
        <ul class="nav navbar-nav">

            <li>@Html.ActionLink("Alumnos", "Index", "Alumnoes")</li>

            <li>@Html.ActionLink("Notas", "Index", "Notas")</li>
        </ul>

    }
    if (User.IsInRole("Direccion"))
    {
        <ul class="nav navbar-nav">

            <li>@Html.ActionLink("Tutores", "Index", "Tutors")</li>
            <li>@Html.ActionLink("Alumnos", "Index", "Alumnoes")</li>
            <li>@Html.ActionLink("Docentes", "Index", "Docentes")</li>
            <li>@Html.ActionLink("Asignaturas", "Index", "Asignaturas")</li>
        </ul>

    }

    if (User.IsInRole("Docente"))
    {
        <ul class="nav navbar-nav">

          
            <li>@Html.ActionLink("Alumnos", "Index", "Alumnoes")</li>
          
            <li>@Html.ActionLink("Notas", "Index", "Notas")</li>
        </ul>

    }

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
        ///
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
      
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
